<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/filter_header"
        android:textAlignment="center"
        android:textColor="#EE5E65"
        android:textSize="28sp" />


    <TextView
        style="@style/text_subheading"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#D1D5E5"
        android:gravity="start|center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/year"
        android:textAppearance="@style/FilterMenuHeader" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/year_2018"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="4dp"
            android:checked="true"
            android:paddingRight="6dp"
            android:background="@drawable/ripple"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:text="@string/year_2018"
           />



        <RadioButton
            android:id="@+id/year_2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingRight="6dp"
            android:background="@drawable/ripple"
            android:textAlignment="textEnd"
            android:layout_gravity="end|center"
            android:text="@string/year_2017" />



        <RadioButton
            android:id="@+id/year_2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingRight="6dp"
            android:background="@drawable/ripple"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:text="@string/year_2016" />

        <RadioButton
            android:id="@+id/year_2015"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingRight="6dp"
            android:background="@drawable/ripple"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:text="@string/year_2015" />

    </RadioGroup>

    <TextView
        style="@style/text_subheading"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        android:background="#D1D5E5"
        android:gravity="start|center"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:text="@string/crs_label"
        android:textAppearance="@style/FilterMenuHeader" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/lowestCRS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lowest_csr" />

        <RadioButton
            android:id="@+id/highestCRS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/highest_csr" />
    </RadioGroup>


    <Button
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/ripple"
        android:gravity="center"
        android:text="@string/sign_out" />

</LinearLayout>