<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/crs_draw_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textAppearance="?android:attr/textAppearanceListItem"
            tools:text="February 7, 2018" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/crs_draw_date"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/crs_draw_date"
            android:layout_toRightOf="@id/crs_draw_date"
            android:textColor="@color/text_tertiary_dark"
            android:textSize="12sp"
            tools:ignore="RelativeOverlap"
            tools:text="13:29:23 UTC" />

        <TextView
            android:id="@+id/no_of_noi_issued_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crs_draw_date"
            android:layout_toEndOf="@id/ita_issued"
            android:layout_toRightOf="@id/ita_issued"
            android:fontFamily="@font/roboto_medium"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:text="@string/invitations_issued"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ita_issued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crs_draw_date"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="3000" />


