<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="text_title" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="text_subheading" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppIntroButtonStyleCompat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="FilterMenuHeader">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#323e42</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
